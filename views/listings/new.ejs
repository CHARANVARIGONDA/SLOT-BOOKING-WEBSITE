   <% layout("/layouts/boilerplate") %>
   <body>
    <div class="row">
        <div class="col-8 offset-2">
    <h2>Create a New Listing</h2>
    <form method="POST" action="/listings">
        <br><br>
        <div class="mb-3">
         <lable for="title" class="form-label">Title</lable>
        <input name="listing[title]" placeholder="Add a cachy title" type="text" class="form-control"/>
        </div>
        <div class="mb-3">
             <lable for="description" class="form-label">Description</lable>
             <textarea name="listing[description]"  class="form-control" ></textarea>
        </div>
         
        <div class="mb-3">
            <lable for="image" class="form-label">Image Link</lable>
            <input name="listing[image][url]" placeholder=" enter image URL/Link"  type="text" class="form-control"/>
        
        </div>
        <div class="row">
        <div class="mb-3 col-md-4" >
        <lable for="Price" class="form-label">Price</lable>
        <input name="listing[price]" placeholder=" 1200" type="number" class="form-control"/>
        </div>
         <div class="mb-3 col-md-8" >
            <lable for="Country" class="form-label">Country</lable>
            <input name="listing[country]" placeholder="India"  type="text" class="form-control"/>
         </div>
        </div>
        
         <div class="mb-3">
             <lable for="location" class="form-label">Location</lable>
              <input name="listing[location]" placeholder="Hyderabad,Vijayawada" type="text" class="form-control"/>
         </div>
        
        <br><br>
        <button class="btn btn-dark add-btn">Add</button>
        <br><br>
    </form>
    </div>
    </div>
</body>
